# Development environment for backend (used by dev docker compose)

# App
PORT=8080
GIN_MODE=debug

# Ollama (use host.docker.internal when running inside Docker)
OLLAMA_URL=http://host.docker.internal:11434
LLM_MODEL=gemma
WHISPER_MODEL_PATH=/usr/local/share/whisper/ggml-base.bin
MAX_FILE_SIZE_MB=25

# Tuya (dev placeholders)
TUYA_CLIENT_ID=
TUYA_ACCESS_SECRET=
TUYA_BASE_URL=
TUYA_USER_ID=
API_KEY=

# Swagger
SWAGGER_BASE_URL=http://localhost:8080

# Responses / Cache
GET_ALL_DEVICES_RESPONSE=0
CACHE_TTL=1h
