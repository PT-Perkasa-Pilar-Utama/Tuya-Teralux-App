# =============================================================================
# Tuya Configuration
# =============================================================================
TUYA_CLIENT_ID=
TUYA_ACCESS_SECRET=
TUYA_BASE_URL=
TUYA_USER_ID=

# =============================================================================
# API Key Configuration
# =============================================================================
API_KEY=

# =============================================================================
# Log Configuration
# =============================================================================
LOG_LEVEL=

# =============================================================================
# GitHub Configuration
# =============================================================================
GITHUB_TOKEN=

# =============================================================================
# Swagger Configuration
# =============================================================================
SWAGGER_BASE_URL=

# =============================================================================
# Speech / RAG Configuration
# =============================================================================
# Ollama server base URL (e.g. http://localhost:11434)
OLLAMA_URL=
# Name of the LLM model in Ollama (e.g. gemma)
LLM_MODEL=gemma
# Path or identifier for Whisper model (e.g. /usr/local/share/whisper/ggml-base.bin)
WHISPER_MODEL_PATH=/usr/local/share/whisper/ggml-base.bin
# Max file size (MB) for uploads
MAX_FILE_SIZE_MB=25
# HTTP port for the backend
PORT=8081

# =============================================================================
# Tuya / General Configuration
# =============================================================================
TUYA_CLIENT_ID=
TUYA_ACCESS_SECRET=
TUYA_BASE_URL=
TUYA_USER_ID=
API_KEY=

# =============================================================================
# Responses & Cache Configuration
# =============================================================================
GET_ALL_DEVICES_RESPONSE=0 # 0=Grouped, 1=Flat, 2=Merged
CACHE_TTL=1h


# =============================================================================
# Database Configuration
# =============================================================================
# Options: sqlite (default, recommended for dev) or mysql (production)
DB_TYPE=sqlite

# SQLite Configuration (used when DB_TYPE=sqlite)
DB_SQLITE_PATH=./tmp/teralux.db

# MySQL Configuration (used when DB_TYPE=mysql)
DB_HOST=
DB_PORT=
DB_USER=
DB_PASSWORD=
DB_NAME=

# Optional MySQL settings
DB_SSLMODE=         # Optional: SSL mode for MySQL connection
DB_CONTAINER_NAME=  # Optional: Docker container name for MySQL